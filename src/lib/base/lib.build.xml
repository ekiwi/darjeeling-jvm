<project basedir="../../../">

	<!-- application directory (relative to /src/lib) -->
	<property name="lib.dir" value="base"/>

	<!-- application name and version-->
	<property name="lib.name" value="base"/>
	<property name="lib.majorversion" value="0"/>
	<property name="lib.minorversion" value="3"/>

	<!-- defaults the includes to an empty file set -->
	<patternset id="lib.includes">
		<exclude name="**/*.*"/>
	</patternset>

	<!-- the rest is included from apps.build.xml -->
	<import file="../lib.build.xml"/>

</project>
