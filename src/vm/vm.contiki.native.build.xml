<project>

	<import file="../../taskdefs.xml"/>

	<target name="all" depends="compile"/>

	<target name="embeddedloader">
		<embeddedloader
			infusions="${infusions}"
			nativeinfusions="${nativeinfusions}"
			run="${run}"
			cfile="${vm.generated}/loader.c"
			hfile="${vm.generated}/loader.h"
			/>
	</target>
	
	<target name="compile">
		<mkdir dir="${vm.objects}/${distro}"/>
		<mkdir dir="${vm.executables}/${distro}"/>
		
		<!-- create .co file -->
		<!-- gcc -DCONTIKI_TARGET=native -Wall -g -I/usr/local/include  
		-O  -I../../platform/native/. -I../../platform/native/dev -I../../cpu/native/. 
		-I../../cpu/native/net -I../../core/dev -I../../core/lib -I../../core/net 
		-I../../core/net/mac -I../../core/net/rime -I../../core/sys -I../../core/cfs 
		-I../../core/ctk -I../../core/lib/ctk -I../../core/loader -I../../core/. 
		-DAUTOSTART_ENABLE -c hello-world.c -o hello-world.co -->	
		<cc 
			name="gcc"
			objdir="${vm.objects}/${distro}"
		>
			<compiler>
				<compilerarg value="-g"/>
				<compilerarg value="-O"/>
				<compilerarg value="-c"/>
				<compilerarg value="-Wall"/>
				<compilerarg value="-o"/>
				<compilerarg value="main.co"/>
				<compilerarg value="-DCONTIKI_TARGET=native"/>
				<compilerarg value="-DAUTOSTART_ENABLE"/>
			</compiler>
			
			<!-- include directories -->
			<includepath>
				<pathelement path="${env.CONTIKI}/core/"/>
				<pathelement path="${env.CONTIKI}/platform/native/"/>
				<pathelement path="${env.CONTIKI}/cpu/native/"/>
				<pathelement path="${lib.generated}"/>
				<pathelement path="${app.generated}"/>
				<pathelement path="${vm.base}"/>
				<pathelement path="${vm.base}/cpu/${cpu}"/>
				<pathelement path="${vm.base}/platform/${platform}"/>
				<pathelement path="${vm.base}/distro/${distro}"/>
			</includepath>
			
			<fileset dir="${vm.base}/platform/${platform}">
				<include name="main.c"/>
			</fileset>
		
		</cc>

		<cc 
			name="gcc"
			objdir="${vm.objects}/${distro}"
		>
			<compiler>
				<compilerarg value="-g"/>
				<compilerarg value="-O"/>
				<compilerarg value="-c"/>
				<compilerarg value="-Wall"/>
				<compilerarg value="-DCONTIKI_TARGET=native"/>
			</compiler>
			
			<!-- include directories -->
			<includepath>
				<pathelement path="${env.CONTIKI}/core/"/>
				<pathelement path="${env.CONTIKI}/platform/native/"/>
				<pathelement path="${env.CONTIKI}/cpu/native/"/>
				<pathelement path="${lib.generated}"/>
				<pathelement path="${app.generated}"/>
				<pathelement path="${vm.base}"/>
				<pathelement path="${vm.base}/cpu/${cpu}"/>
				<pathelement path="${vm.base}/platform/${platform}"/>
				<pathelement path="${vm.base}/distro/${distro}"/>
			</includepath>
			
			<fileset dir="${vm.base}/common"><include name="**/*.c"/></fileset>
			<fileset dir="${vm.base}/cpu/${cpu}"><include name="**/*.c"/></fileset>
			<fileset dir="${vm.base}/platform/${platform}"><exclude name="main.c"/><include name="**/*.c"/></fileset>
			<fileset dir="${vm.base}/distro/${distro}"><include name="**/*.c"/></fileset>
			<fileset dir="${vm.opt}"><patternset refid="opt"/></fileset>
		
		</cc>

		<cc outfile="${vm.executables}/${distro}/darjeeling" 
	        objdir="${vm.objects}/${distro}"
	        debug="false">

			<linker>
				<linkerarg value="-Wl"/>
			</linker>

			<libset libs="c" />
			<fileset dir="${vm.objects}/${distro}/"><include name="*.o"/><include name="*.co"/></fileset>
			<fileset dir="${lib}/"><include name="contiki-native.a"/></fileset>
		</cc>
		
	</target>

	<target name="run" depends="compile">
	</target>

</project>
