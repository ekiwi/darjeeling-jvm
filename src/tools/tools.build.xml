<project basedir="../../" default="package">

	<property file="darjeeling.properties"/>

	<!-- compile the sources -->
	<target name="compile">
		<mkdir dir="${tools.classes}"/>
		<javac
			srcdir="${tools.source}"
			destdir="${tools.classes}"
			classpath="${tools.classpath}"
			source="1.5"
			debug="true"
			encoding="iso-8859-1"		
		>
		</javac>
	</target>

	<!-- package the tools into a single .jar file -->
	<target name="package" depends="compile"> 
		<mkdir dir="${tools.jars}"/>
		<jar destfile="${tools.jar}"> 
			<fileset dir="${tools.classes}"><include name="**/*.class"/></fileset>
			<zipfileset src="${tools.libs}" excludes="META-INF/*"/>
			<manifest><attribute name="Main-Class" value="org.csiro.darjeeling.infuser.Infuser"/></manifest>
		</jar>
	</target>

	<!-- compile the sources -->
	<target name="doc">
		<mkdir dir="${tools.doc}"/>
		<javadoc
			sourcepath="${tools.source}"
			destdir="${tools.doc}"
			classpath="${tools.classpath}"
		>
		</javadoc>
	</target>

	<!-- clean -->
	<target name="clean">
		<delete dir="${tools.classes}"/>
		<delete file="${tools.jar}"/>
	</target>

</project>	
